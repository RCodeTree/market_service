#!/usr/bin/env node

/**
 * æ¨¡å—ä¾èµ–
 */

var app = require('../src/app');
var debug = require('debug')('market-service:server');
var http = require('http');

/**
 * ä»ç¯å¢ƒå˜é‡è·å–ç«¯å£å¹¶å­˜å‚¨åˆ° Express ä¸­
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * åˆ›å»º HTTP æœåŠ¡å™¨
 */

var server = http.createServer(app);

/**
 * åœ¨æŒ‡å®šç«¯å£ä¸Šç›‘å¬æ‰€æœ‰ç½‘ç»œæ¥å£
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * å°†ç«¯å£æ ‡å‡†åŒ–ä¸ºæ•°å­—ã€å­—ç¬¦ä¸²æˆ– false
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // å‘½åç®¡é“
    return val;
  }

  if (port >= 0) {
    // ç«¯å£å·
    return port;
  }

  return false;
}

/**
 * HTTP æœåŠ¡å™¨ "error" äº‹ä»¶ç›‘å¬å™¨
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // å¤„ç†ç‰¹å®šçš„ç›‘å¬é”™è¯¯å¹¶æ˜¾ç¤ºå‹å¥½æ¶ˆæ¯
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * HTTP æœåŠ¡å™¨ "listening" äº‹ä»¶ç›‘å¬å™¨
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
  console.log('ğŸš€ Market Service æœåŠ¡å™¨å¯åŠ¨æˆåŠŸï¼');
  console.log('ğŸ“ æœåŠ¡åœ°å€: http://localhost:' + addr.port);
  console.log('ğŸ“š APIæ–‡æ¡£: http://localhost:' + addr.port + '/api');
}
